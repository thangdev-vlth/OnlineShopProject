                    </a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="category-item ch-400">
                    <img src="/Client/img/category-8.jpg" />
                    <a class="category-name" href="">
                        <p>Sang trọng quý phái</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Category End-->
<!-- Call to Action Start -->
<div class="call-to-action">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Hãy Gọi Cho Chúng Tôi Để Được Tư Vấn</h1>
            </div>
            <div class="col-md-6">
                <a href="tel:0389303301">+012-345-6789</a>
            </div>
        </div>
    </div>
</div>
<!-- Call to Action End -->
<!-- Featured Product Start -->
<div class="featured-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h1>Sản Phẩm Nổi Bật</h1>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
            @foreach (var item in Model.FeaturedProducts)
            {

                <div class="col-lg-3">
                    <div class="product-item">
                        <div class="product-title">
                            <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id">@item.Name</a>
                            <div class="ratting">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                        <div class="product-image">
                            <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id">
                                <img src="@item.ThumbnailImage" alt="Product Image">
                            </a>
                            <div class="product-action">
                                <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id"><i class="fa fa-cart-plus"></i></a>
                                <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></a>
                                <a href="#"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="product-price">
                            <h3>@item.price</h3>
                            <a class="btn" asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id"><i class="fa fa-shopping-cart"></i>Buy Now</a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
<!-- Featured Product End -->
<!-- Newsletter Start -->
<div class="newsletter">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h1>Đăng Kí Để Nhận Được Nhiều Thông Tin Ưu Đãi</h1>
            </div>
            <div class="col-md-6">
                <div class="form">
                    <input type="email" value="Nhập email của bạn">
                    <button style="font-size:12px" disabled>Đăng kí</button>
                </div>
