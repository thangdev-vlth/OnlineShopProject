@{ ViewData["Title"] = "Home Page"; }
@model HomeViewModel

<!-- Main Slider Start -->
<div class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <nav class="navbar bg-light">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-home"></i>Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="HomePage" asp-action="ListProduct" asp-route-listType="bestSale"><i class="fa fa-shopping-bag"></i>Sản phẩm bán chạy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HomePage" asp-action="ListProduct" asp-route-listType="View"><i class=" fa far fa-star"></i>Sản Phẩm Xem Nhiều</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HomePage" asp-action="ListProduct" asp-route-listType="New"><i class="fa fa-plus-square"></i>Sản phẩm mới</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-2"><i class="fa fa-female"></i>Váy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-3"><i class="fas fa fa-male"></i>Street Style</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-4"><i class="fa fa-tshirt"></i>T-Shirt</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-1"><i class="fa fa-mobile-alt"></i>Jean</a>
                        </li>

                    </ul>
                </nav>
            </div>
            <div class="col-md-6">
                <div class="header-slider normal-slider">
                    <div class="header-slider-item">
                        <img src="/Client/img/slider-1.jpg" alt="Slider Image" />

                    </div>
                    <div class="header-slider-item">
                        <img src="/Client/img/slider-2.jpg" alt="Slider Image" />

                    </div>
                    <div class="header-slider-item">
                        <img src="/Client/img/slider-3.jpg" alt="Slider Image" />

                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="header-img">
                    <div class="img-item">
                        <img src="/Client/img/category-1.jpg" />
                        <a class="img-text" href="">
                            <p>Sang trọng cá tính</p>
                        </a>
                    </div>
                    <div class="img-item">
                        <img src="/Client/img/category-2.jpg" />
                        <a class="img-text" href="">
                            <p>Trẻ trung năng động</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main Slider End -->
<!-- Brand Start -->
<div class="brand">
    <div class="container-fluid">
        <div class="brand-slider">
            <div class="brand-item"><img src="/Client/img/brand-1.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-2.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-3.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-4.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-5.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-6.png" alt=""></div>
        </div>
    </div>
</div>
<!-- Brand End -->
<!-- Feature Start-->
<div class="feature">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fab fa-cc-mastercard"></i>
                    <h2>Thanh toán an toàn </h2>
                    <p>
                        Thanh toán khi nhận hàng
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-truck"></i>
                    <h2>Giao hàng nhanh chóng</h2>
                    <p>
                        Các đơn vị giao hàng có mặt trên toàn quốc
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-sync-alt"></i>
                    <h2>Bảo hành sản phẩm</h2>
                    <p>
                        Cam kết đổi trả khi sản phẩm bị lỗi
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-comments"></i>
                    <h2>Hỗ trợ 24/7</h2>
                    <p>
                        Đội ngũ nhân viên luôn hỗ trợ nhiệt tình
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feature End-->
<!-- Category Start-->
<div class="category">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="category-item ch-400">
                    <img src="/Client/img/category-3.jpg" />
                    <a class="category-name" href="">
                        <p>Thời trang cặp đôi</p>
                    </a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="category-item ch-250">
                    <img src="/Client/img/category-4.jpg" />
                    <a class="category-name" href="">
                        <p>Cá tính nét riêng</p>
                    </a>
                </div>
                <div class="category-item ch-150">
                    <img src="/Client/img/category-5.jpg" />
                    <a class="category-name" href="">
                        <p>Phụ kiện thời trang</p>
                    </a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="category-item ch-150">
                    <img src="/Client/img/category-6.jpg" />
                    <a class="category-name" href="">
                        <p>Mỹ phẩm nổi tiếng</p>
                    </a>
                </div>
                <div class="category-item ch-250">
                    <img src="/Client/img/category-7.jpg" />
                    <a class="category-name" href="">
