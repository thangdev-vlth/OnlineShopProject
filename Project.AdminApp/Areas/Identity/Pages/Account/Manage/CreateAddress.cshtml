@page "/customer/address/create"
@model Project.AdminApp.Areas.Identity.Pages.Account.Manage.CreateAddressModel
@{
    ViewData["Title"] = "HỒ SƠ";
    ViewData["ActivePage"] = ManageNavPages.Address;
}
<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div>
                <span asp-validation-for="cityId" class="text-danger"></span>
                <select class="form-select form-select-sm mb-3" id="city" aria-label=".form-select-sm" asp-for="cityId" required>
                    <option value="" selected>Chọn tỉnh thành</option>
                </select>
            </div>

            <div>
                <span asp-validation-for="districtId" class="text-danger"></span>
                <select class="form-select form-select-sm mb-3" id="district" aria-label=".form-select-sm" asp-for="districtId" required>
                    <option value="" selected>Chọn quận huyện</option>
                </select>
            </div>

            <div>
                <span asp-validation-for="wardId" class="text-danger"></span>
                <select class="form-select form-select-sm mb-3" id="ward" aria-label=".form-select-sm" asp-for="wardId" required>
                    <option value="" selected>Chọn phường xã</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Input.Address"></label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div>
                <label class="Checkbox__StyledCheckbox-sc-75m08j-0 gkoeQY">
                    @Html.CheckBox("IsDefault")<span class="checkbox-fake"></span><span class="label">Đặt làm địa chỉ mặc định</span>
                </label>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-danger">Lưu hồ sơ</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Client/js/render.js"></script>
    <script>
        var render = new RenderController();
        render.initialize();
    </script>
}